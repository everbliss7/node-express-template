{
  "compilerOptions": {
    "noImplicitAny": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,

    "baseUrl": "./",
    "paths": {
      "@utils/*": ["src/utils/*"],
      "@domains/*": ["src/domains/*"],
      "@configs/*": ["src/configs/*"],
      "@libs/*": ["src/libs/*"],
      "@types/*": ["src/types/*"],
      "@controllers/*": ["src/controllers/*"],
      "@middlewares/*": ["src/middlewares/*"],
      "@router/*": ["src/router/*"],
      "@services/*": ["src/services/*"],
      "@validators/*": ["src/validators/*"],
      "@helpers/*": ["src/helpers/*"],
      "@constants/*": ["src/constants/*"]
    }
  },
  "include": ["src/**/*"]
}
